---
import Layout from '../layouts/Layout.astro';

const trainings = [
  {
    name: "After office",
    url: "https://www.freeletics.com/en/bodyweight/workouts/custom/6c19fa8b-5a18-4163-8911-88ea87e59f1c"
  },
  {
    name: "After office 2 (Caderas - espalda)",
    url: "https://www.freeletics.com/en/bodyweight/workouts/custom/cd63ae4b-7261-4059-a5e1-fd567ffd6e6a"
  },
  {
    name: "After office 3",
    url: "https://www.freeletics.com/en/bodyweight/workouts/custom/003ae605-9033-4287-b398-719d5d488bde"
  },
  {
    name: "After office 4",
    url: "https://www.freeletics.com/en/bodyweight/workouts/custom/a590f6ff-deb0-47b2-813d-3f2542ea14e2"
  }
];
---

<Layout title="Victor's Freeletics Trainings">
  <main>
    <h1>Victor's <span class="text-gradient">Freeletics</span> Trainings</h1>
    <div class="training-grid">
      {trainings.map((training) => (
        <a href={training.url} class="training-card" target="_blank" rel="noopener noreferrer">
          <h2>{training.name} <span>â†’</span></h2>
        </a>
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 2em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .training-grid {
    display: grid;
    gap: 1rem;
    padding: 0;
  }
  .training-card {
    padding: 1rem;
    background-color: #23262d;
    border-radius: 8px;
    text-decoration: none;
    color: white;
    opacity: 0.8;
    transition: opacity 0.2s ease-in-out;
  }
  .training-card:hover {
    opacity: 1;
  }
  .training-card h2 {
    margin: 0;
    font-size: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .training-card span {
    color: rgb(var(--accent-light));
  }
</style>